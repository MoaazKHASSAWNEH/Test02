{% extends "base.html.twig" %}

{% block title %}
    {{ articles.titre }}
{% endblock %}

{% block body %}
<div class="article_full_screen">
    <h1 class="titre">{{ articles.titre }}</h1>
    <p><img src="{{ vich_uploader_asset(articles, 'imageFile')| imagine_filter('medium') }}" /></p>
    <p class="contenu">Contenu : {{ articles.contenu }}</p>
    <div class="pied">
        <p><a class="btn" href="{{ path('categorie_id', {'id':articles.categorie.id})}}">{{ articles.categorie.titre}}</a></p>
        <p><a class="btn" href="{{ path('auteur_id', {'id':articles.auteur.id})}}">{{ articles.auteur.nom }} {{ articles.auteur.prenom }}</a></p>
    </div>
    
    <h1>Ajouter un commentaire</h1>

    {{ form(form_commentaire) }}

    <h1>Commentaires</h1>
    {% for commentaire in articles.Commentaires %}
        <div class="commentaire">
            <p class="tete">Publié le {{ commentaire.date | date("d/m/Y") }} à {{ commentaire.date | date("h:i") }} par : {{ commentaire.auteur }}</p>
            <p class="info">E-mail : {{ commentaire.email }}</p>
            <p class="contenu">Contenu : {{ commentaire.contenu }}</p>
        </div>
    {% endfor %}
</div>
    


{% endblock %}